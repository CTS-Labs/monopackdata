{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "@monopack": {
      "type": "object",
      "properties": {
        "description": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the pack"
            },
            "namespace": {
              "type": "string",
              "description": "The namespace of the pack"
            }
          },
          "required": ["name", "namespace"]
        },
        "registry": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["description"]
    }
  },
  "required": ["@monopack"]
}
